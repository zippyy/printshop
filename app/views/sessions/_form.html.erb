<div class="user-form">
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %> <br>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %> <br>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me], class: 'remember-me-check' %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
</div>