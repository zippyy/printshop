<div class="main-grid">
	<h1>Products List</h1> <br>
		<% @products.each do |product| %>
	<table class="product-table"> 
			<tr>
				<td class="product-name"><%= link_to product.name, edit_product_url(product) %> </td>
				<td><%= "Special" if product.custom == true  %><%= "Standard" if product.custom == false %> </td>
				<td> <%= button_to "Edit", edit_product_url(product), :method =>:get, class: "product-button" %> </td>
				<td><%= button_to "Delete", product, :method=>:delete, :class=>:destroy, confirm: "Really delete product and all associated records?",class: "product-button" %></td>
			</tr>
			<tr>
				<td>
					<% if product.has_characteristic?(product.sizes) %> 
						
						<table class="characteristic-table">
							<% product.sizes.each do |size| %>
								<tr>
								<td><%= size.size %></td>
								</tr>
							<% end %>
						</table>
					<% end %>
				</td>
				<td colspan="2">
					<% if product.has_characteristic?(product.finishes) %>
						<table class="characteristic-table">
							<% product.finishes.each do |finish| %>
								<tr>
								 <td><%= finish.finish %></td>
								 </tr>
							<% end %>
						</table>
					<% end %>
				</td>
				<td>
					<% if product.has_characteristic?(product.quantities) %>
						<table class="characteristic-table">
							<% product.quantities.each do |quantity| %>
								<tr>
									<td><%= quantity.quantity %></td>
								</tr>
							<% end %>
						</table>
					<% end %>
				</td>
				</tr>
	</table>
	<hr class="half">
		<% end %>
</div>

