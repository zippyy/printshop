<div class="main-grid">
	<h1>products list</h1> <br>
	<table> 
		<% @products.each do |product| %>
			<tr>
				<td><%= link_to product.name, edit_product_url(product) %>	
					</td> 
				<td>
					<%= "Special" if product.custom == true  %>
					<%= "Standard" if product.custom == false %>
				</td>
			</tr>
		<% end %>
	</table>
</div>

