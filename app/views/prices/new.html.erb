<h1>prices list</h1>
<table>
	<% @products.each do |product| %>
		<% product.sizes.each do |size| %>
			<% product.finishes.each do |finish|%>
			<% product.quantities.each do |quantity| %>
				<tr>
					<td><%= product.name %></td> 
					<td><%= size.size %></td>
					<td><%= finish.finish %></td>
					<td><%= quantity.quantity %></td>
					<td id="price-cell">
						<% if product.has_price?(size, finish, quantity) %>
							<% price = product.get_price(size, finish, quantity) %>
							$<%= price.price %>
						<% else %>
							<%= form_for @price do |f| %>
								<%= f.hidden_field :product_id, :value => product.id %>
								<%= f.hidden_field :size_id, :value => size.id %>
								<%= f.hidden_field :finish_id, :value => finish.id %>
								<%= f.hidden_field :quantity_id, :value => quantity.id %>
								<%= f.text_field :price, class: "price-text-area" %>
								<%= f.submit "Add Price", class: "price-button" %>
							<% end %>
						<% end %>
					</td>
				</tr>
			<% end %>
		<% end %>
	<% end %>
<% end %>
</table>


